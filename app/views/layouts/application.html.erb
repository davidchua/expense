<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

	<title>Expense - Simple, personal expense tracking.</title>

  <%= stylesheet_link_tag 'reset', 'screen' %>
</head>
<body>

<div id="header">
  <div class="container">
    <h1><a href="/">Expense</a></h1>
    <p>Simple, personal expense tracking.</p>

    <% if logged_in? %>
      <ul>
        <li><a href="/logout">Logout</a></li>
      </ul>

      <% if @expense %>
        <% form_for(@expense) do |form| %>
          <fieldset>
            <legend>Add an Expense</legend>

            <label for="expense_item">Item</label><br />
            <%= form.text_field :item %>
            <br />

            <button type="submit">Add</button>
          </fieldset>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>

<div id="content-container">
  <div class="container">
    <%= yield %>
  </div>
</div>

<div id="footer" class="container">
  <% form_for(:search, :url => search_expenses_path, :html => { :method => :get }) do %>
    <fieldset>
      <legend>Search</legend>

      <label for="search_query">Query</label><br />
      <%= text_field :search, 'query' %>
      <br />

      <button type="submit">Search</button>
    </fieldset>
  <% end %>

  <p>
    Created by <a href="http://tristandunn.com">Tristan Dunn</a>.<br />
    Open-source and <a href="http://github.com/tristandunn/expense">available on GitHub</a>.
  </p>
</div>

<% if logged_in? %>
  <%= javascript_include_tag 'application' %>
<% end %>

</body>
</html>