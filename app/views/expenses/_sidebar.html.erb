<h2>Averages</h2>

<dl id="summary">
  <dt>Total for this month</dt>
  <dd><%= number_to_currency(@expenses.calculate_total_for(:month)) %></dd>
  <dt>Average per month</dt>
  <dd class="<%= class_for_status_of(:month, @expenses) %>"><%= number_to_currency(@averages[:month] || 0) %></dd>
  <dt>Average per week</dt>
  <dd class="<%= class_for_status_of(:week, @expenses) %>"><%= number_to_currency(@averages[:week] || 0) %></dd>
  <dt>Average per day</dt>
  <dd class="<%= class_for_status_of(:day, @expenses) %>"><%= number_to_currency(@averages[:day] || 0) %></dd>
</dl>
